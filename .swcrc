{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": false,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    // будет работать только с этими настройками
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // "paths": {
    //   "src/*": [
    //     "./*"
    //   ]
    // }
  },
  "minify": false
}